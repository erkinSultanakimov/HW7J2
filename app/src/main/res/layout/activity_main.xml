<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity">

    <TextView
        android:id="@+id/name_animal_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This dog"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/animal_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@+id/name_animal_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/image_first_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="image#1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animal_image"
        android:onClick="changeImage"

        />

    <Button
        android:id="@+id/image_second_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="image#2"
        app:layout_constraintStart_toEndOf="@+id/image_first_button"
        app:layout_constraintTop_toBottomOf="@+id/animal_image"
        android:onClick="changeImage"
        />

    <Button
        android:id="@+id/image_third_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="image#3"
        app:layout_constraintStart_toEndOf="@+id/image_second_button"
        app:layout_constraintTop_toBottomOf="@+id/animal_image"
        android:onClick="changeImage"
        />
    <Button
        android:id="@+id/dog_botton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:text="dog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_first_button"

        />

    <Button
        android:id="@+id/cat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/dog_botton"
        android:text="cat"
        app:layout_constraintTop_toBottomOf="@+id/image_third_button" />
    <Button
        android:id="@+id/squirrel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/cat_button"
        android:text="squirrl"
        app:layout_constraintTop_toBottomOf="@+id/image_third_button"

        />









</androidx.constraintlayout.widget.ConstraintLayout>